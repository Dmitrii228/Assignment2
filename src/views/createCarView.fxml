<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CreateCarViewControllers">
   <children>
      <VBox layoutX="129.0" layoutY="121.0" spacing="20.0">
         <children>
            <StackPane>
               <children>
                  <Label text="Create a new car" />
               </children>
            </StackPane>
            <GridPane prefHeight="279.0" prefWidth="476.0" vgap="15.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="431.0" minWidth="10.0" prefWidth="236.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="240.0" minWidth="10.0" prefWidth="240.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints maxHeight="196.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="227.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="227.0" minHeight="10.0" prefHeight="41.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="227.0" minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="227.0" minHeight="10.0" prefHeight="37.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Make:" GridPane.rowIndex="1" />
                  <Label text="Model:" GridPane.rowIndex="2" />
                  <Label text="Year:" GridPane.rowIndex="3" />
                  <Label text="Mileage:" GridPane.rowIndex="4" />
                  <Label text="Price:" GridPane.rowIndex="5" />
                  <TextField fx:id="makeTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="modelTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="yearTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="mileageTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField fx:id="priceTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               </children>
            </GridPane>
         </children>
      </VBox>
      <Button layoutX="129.0" layoutY="493.0" mnemonicParsing="false" onAction="#addCar" text="Add" />
      <Button layoutX="337.0" layoutY="493.0" mnemonicParsing="false" onAction="#returnToInventory" text="Return" />
   </children>
</AnchorPane>
